<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#BFDBFE" />
                <gradient android:angle="-90" android:startColor="#BFDBFE" android:endColor="#BEDAFD"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#BFDBFE" />
                <solid android:color="#BFDBFE"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#BFDBFE" />
                <gradient android:angle="-90" android:startColor="#ABC5E4" android:endColor="#AAC4E3" />
            </shape>
        </item>
</selector>